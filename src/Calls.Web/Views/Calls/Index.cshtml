@model IEnumerable<CallResponse>

<div class="container mx-auto mt-5">
    <div class="d-flex gap-4 justify-content-between mb-4 align-items-center">
        <h2>Звонки</h2>
        <a asp-action="Create">
            <button class="btn btn-primary">Добавить звонок</button>
        </a>
    </div>
    <table class="table table-bordered table-sm text-center">
        <thead class="table-light">
        <tr>
            <th>Начало</th>
            <th>Конец</th>
            <th>Длительность</th>
            <th>Тариф</th>
            <th>Стоимость</th>
            <th>Инициатор</th>
            <th>Участников</th>
            <th>Действия</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var call in Model)
        {
            <tr>
                <td class="align-content-center">@Html.DisplayFor(_ => call.Since)</td>
                <td class="align-content-center">
                    @if (call.Until is null)
                    {
                        <form method="post" asp-action="Finish" asp-route-id="@call.Id" class="flex-grow-1">
                            <button class="btn btn-outline-success w-100">Завершить</button>
                        </form>
                    }
                    else
                    {
                        @Html.DisplayFor(_ => call.Until)
                    }
                </td>
                <td class="align-content-center">@Html.DisplayFor(_ => call.Duration)</td>
                <td class="align-content-center">@Html.DisplayFor(_ => call.ChargePerMinute) руб./мин.</td>
                <td class="align-content-center">@(call.Charge.HasValue ? Html.DisplayFor(_ => call.Charge) : "—")</td>
                <td class="align-content-center">@Html.DisplayFor(_ => call.StarterPhoneNumber)</td>
                <td class="align-content-center">@Html.DisplayFor(_ => call.TotalPhoneNumbersCount)</td>
                <td class="d-flex gap-1">
                    <a asp-action="Edit" asp-route-id="@call.Id" class="flex-grow-1">
                        <button class="btn btn-outline-primary w-100">Изменить</button>
                    </a>
                    <form method="post" asp-action="Delete" asp-route-id="@call.Id" class="flex-grow-1">
                        <button class="btn btn-outline-danger w-100">Удалить</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>